<header class="page-header">
    <div class="container">
        <div class="page-header__row">
            <a href="#" class="page-header__logo">
                <span class="page-header__logo-white-text">
                    Life
                </span>
                <span class="page-header__logo-black-text">
                    practic
                </span>
            </a>
            {{#unless noNav}}
            <div class="page-header__mobile-menu">
                <div class="page-header__mobile-menu-inner">
                    <nav class="page-header__nav">
                        <ul class="page-header__nav-list">
                            <li class="page-header__nav-list-item">
                                <a href="#" class="page-header__nav-link">
                                    Проблемы
                                </a>
                            </li>
                            <li class="page-header__nav-list-item">
                                <a href="#" class="page-header__nav-link">
                                    Описание процесса
                                </a>
                            </li>
                            <li class="page-header__nav-list-item">
                                <a href="#" class="page-header__nav-link">
                                    Подобрать психотерапевта
                                </a>
                            </li>
                            <li class="page-header__nav-list-item">
                                <a href="#" class="page-header__nav-link">
                                    Отзывы
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="page-header__mobile-menu-btns">
                        <div class="page-header__mobile-menu-social">
                            <a href="#" class="page-header__mobile-menu-social-link">
                                <svg width="14" height="14" aria-hidden="true" class="icon-instagram">
                                    <use xlink:href="#instagram"></use>
                                </svg>
                            </a>
                            <a href="#" class="page-header__mobile-menu-social-link">
                                <svg width="14" height="14" aria-hidden="true" class="icon-vk">
                                    <use xlink:href="#vk"></use>
                                </svg>
                            </a>
                        </div>
                        {{#unless login}}
                        <a href="#" class="page-header__mobile-register-btn">
                            Регистрация
                        </a>
                        {{/unless}}
                    </div>
                </div>
            </div>
            {{/unless}}


            {{#if login}}
            {{#unless accountPage}}
            <a href="#" class="page-header__user">
                <div class="page-header__user-avatar">
                    {{!-- <img src="user-avatar.jpg" alt=""> --}}
                </div>
                <div class="page-header__user-name">
                    Татьяна
                </div>
            </a>
            {{/unless}}
            {{else}}
            <div class="page-header__btns">
                <a href="register-1.html" class="page-header__btn page-header__btn--login">
                    Войти
                </a>
                <a href="register-1.html" class="page-header__btn">
                    Регистрация
                </a>
            </div>
            {{/if}}

            <div class="page-header__mobile-btns">
                {{#unless login}}

                <a href="#" class="page-header__mobile-login">
                    <svg width="14" height="14" aria-hidden="true" class="icon-person">
                        <use xlink:href="#person"></use>
                    </svg>
                </a>
                {{/unless}}
                {{#unless noNav}}
                <burger class="page-header__burger">
                    <span class="page-header__burger-content">
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </burger>
                {{/unless}}
            </div>
        </div>
    </div>
</header>