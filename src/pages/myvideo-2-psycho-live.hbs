{{#extend "layout"}}
{{#content "main"}}

<div class="account">
    <div class="container">


        <div class="account__layout">
            <div class="account__layout-left-col">
                <div class="account__panel">
                    <div class="account__user">
                        <div class="account__image-container">
                            <img src="img/psycho.jpg" alt="" class="account__image">
                        </div>
                        <div class="account__user-name">
                            Дмитрий Токмаков
                        </div>
                    </div>

                    <nav class="account__menu">
                        <a href="#" class="account__menu-link active">
                            <svg width="14" height="14" aria-hidden="true" class="icon-account-pencil">
                                <use xlink:href="#account-pencil"></use>
                            </svg>
                            <span class="account__menu-link-text">
                                Мои сеансы
                            </span>

                        </a>
                        <a href="#" class="account__menu-link">
                            <svg width="14" height="14" aria-hidden="true" class="icon-stats">
                                <use xlink:href="#stats"></use>
                            </svg>



                            <span class="account__menu-link-text">
                                Статистика
                            </span>
                        </a>
                        <a href="#" class="account__menu-link">
                            <svg width="14" height="14" aria-hidden="true" class="icon-account-person">
                                <use xlink:href="#account-person"></use>
                            </svg>

                            <span class="account__menu-link-text">
                                Личные данные
                            </span>
                        </a>

                        <a href="#" class="account__menu-link">
                            <svg width="14" height="14" aria-hidden="true" class="icon-account-exit">
                                <use xlink:href="#account-exit"></use>
                            </svg>


                            <span class="account__menu-link-text">
                                Выйти
                            </span>
                        </a>
                    </nav>

                </div>
            </div>
            <div class="account__layout-right-col">
                <div class="account__main-content account__main-content--fullwidth">
                    <div class="account__my-video">
                        <h1 class="account__my-video-heading">
                            <a href="#" class="account__my-video-back-link">
                                <svg width="14" height="14" aria-hidden="true" class="icon-arrow-left">
                                    <use xlink:href="#arrow-left"></use>
                                </svg>

                            </a>
                            Сеанс с клиентом
                        </h1>
                        <div class="account__my-video-row">


                            <div class="account__my-video-left-col">
                                <video class="js-video-player" playsinline controls>
                                    <source src="assets/video/video.mp4" type="video/mp4" />
                                 
                                </video>
                            </div>
                            <div class="account__my-video-right-col">

                                <div class="account__my-video-about-specialist">
                                    <div class="account__my-video-about-specialist-info">
                                        <div class="account__my-video-about-specialist-image-container">
                                            <img src="img/clients/client-1.jpg" alt=""
                                                class="account__my-video-about-specialist-image">
                                        </div>
                                        <div class="account__my-video-about-specialist-content">
                                            <div class="account__my-video-about-specialist-name">
                                                Татьяна
                                            </div>
                                            <div class="account__my-video-about-specialist-experience">
                                                23 года
                                            </div>
                                        </div>
                                    </div>
                                    <div class="account__my-video-about-specialist-text">
                                        Справиться со стрессом; Планирование семьи; Повысить...
                                    </div>
                                    <a href="#about-client"
                                        class="account__my-video-about-specialist-more-link js-open-modal">
                                        Подробнее
                                        <svg width="14" height="14" aria-hidden="true" class="icon-arrow-right">
                                            <use xlink:href="#arrow-right"></use>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



{{/content}}
{{/extend}}