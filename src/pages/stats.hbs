{{#extend "layout"}}
{{#content "main"}}

<div class="account">
    <div class="container">


        <div class="account__layout">
            <div class="account__layout-left-col">
                <div class="account__panel">
                    <div class="account__user">
                        <div class="account__image-container">
                            <img src="img/psycho.jpg" alt="" class="account__image">
                        </div>
                        <div class="account__user-name">
                            Дмитрий Токмаков
                        </div>
                    </div>

                    <nav class="account__menu">
                        <a href="#" class="account__menu-link active">
                            <svg width="14" height="14" aria-hidden="true" class="icon-account-pencil">
                                <use xlink:href="#account-pencil"></use>
                            </svg>
                            <span class="account__menu-link-text">
                                Мои сеансы
                            </span>

                        </a>
                        <a href="#" class="account__menu-link">
                            <svg width="14" height="14" aria-hidden="true" class="icon-stats">
                                <use xlink:href="#stats"></use>
                            </svg>



                            <span class="account__menu-link-text">
                                Статистика
                            </span>
                        </a>
                        <a href="#" class="account__menu-link">
                            <svg width="14" height="14" aria-hidden="true" class="icon-account-person">
                                <use xlink:href="#account-person"></use>
                            </svg>

                            <span class="account__menu-link-text">
                                Личные данные
                            </span>
                        </a>

                        <a href="#" class="account__menu-link">
                            <svg width="14" height="14" aria-hidden="true" class="icon-account-exit">
                                <use xlink:href="#account-exit"></use>
                            </svg>


                            <span class="account__menu-link-text">
                                Выйти
                            </span>
                        </a>
                    </nav>

                </div>
            </div>
            <div class="account__layout-right-col">
                <div class="account__main-content account__main-content--fullwidth">
                    <div class="account__my-video">
                        <h1 class="account__my-video-heading">
                            <a href="#" class="account__my-video-back-link">
                                <svg width="14" height="14" aria-hidden="true" class="icon-arrow-left">
                                    <use xlink:href="#arrow-left"></use>
                                </svg>

                            </a>
                            Сеанс с клиентом
                        </h1>
                        <div class="account__my-video-row">

                            <div class="account__my-video-left-col">
                                <div class="account__stats">


                                    <div class="account__stats-card">
                                        <div class="account__stats-card-top-row">
                                            <div class="account__stats-period">
                                                <a href="#" class="account__period-link active">
                                                    Месяц
                                                </a>
                                                <a href="#" class="account__period-link">
                                                    Год
                                                </a>
                                            </div>

                                            <div class="account__stats-pagination">
                                                <a href="#" class="account__stats-pagination-arrow">
                                                    <svg width="14" height="14" aria-hidden="true"
                                                        class="icon-arrow-left">
                                                        <use xlink:href="#arrow-left"></use>
                                                    </svg>
                                                </a>
                                                <div class="account__stats-pagination-date">
                                                    Декабрь

                                                    <div class="account__stats-pagination-dropdown">
                                                        <div class="account__stats-pagination-dropdown-inner">

                                                            <a href="#" class="account__stats-pagination-dropdown-link">
                                                                Январь
                                                            </a>
                                                            <a href="#" class="account__stats-pagination-dropdown-link">
                                                                Февраль
                                                            </a>
                                                            <a href="#" class="account__stats-pagination-dropdown-link">
                                                                Март
                                                            </a>
                                                            <a href="#" class="account__stats-pagination-dropdown-link">
                                                                Апрель
                                                            </a>
                                                            <a href="#" class="account__stats-pagination-dropdown-link">
                                                                Май
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <a href="#" class="account__stats-pagination-arrow">
                                                    <svg width="14" height="14" aria-hidden="true"
                                                        class="icon-arrow-right">
                                                        <use xlink:href="#arrow-right"></use>
                                                    </svg>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="account__stats-card-bottom-row">
                                            <div class="account__stats-card-left-col">
                                                <div class="account__stats-card-diagram" style="--percentage: 0.3">
                                                    <svg width="200" height="200" viewBox="0 0 200 200"
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        class="recommendations__slider-arrow-next-progress">
                                                        <circle cy="100" cx="100" r="80" fill="transparent"
                                                            stroke="white" stroke-opacity="1" stroke-width="18"
                                                            stroke-linecap="round">
                                                        </circle>
                                                        <circle cy="100" cx="100" r="80" fill="transparent"
                                                            stroke="white" stroke-width="18" stroke-dasharray="500"
                                                            stroke-linecap="round">
                                                        </circle>
                                                    </svg>
                                                    <div class="account__stats-card-diagram-content">
                                                        <div class="account__stats-card-diagram-total">
                                                            <div class="account__stats-card-diagram-total-value">
                                                                2365
                                                            </div>
                                                            <div class="account__stats-card-diagram-total-key">
                                                                сеансов
                                                            </div>
                                                        </div>
                                                        <div class="account__stats-card-diagram-success">
                                                            <div class="account__stats-card-diagram-success-value">
                                                                118
                                                            </div>
                                                            <div class="account__stats-card-diagram-success-key">
                                                                Кол-во возвращений
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="account__stats-card-right-col">
                                                <h3 class="account__stats-card-heading">
                                                    Как улучшить свою статистику сеансов?
                                                </h3>
                                                <div class="account__stats-card-text">
                                                    Вы можете обратиться к нам, мы с радостью поможем вам
                                                </div>
                                                <a href="#" class="account__stats-card-link">
                                                    связаться с нами
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="account__my-video-right-col">


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



{{/content}}
{{/extend}}